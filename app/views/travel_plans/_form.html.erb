<%= form_for @travel_plan  do |f| %>
        <div class="form-group">
          <%= f.label :location_id, "Country to shop in" %>
          <%= f.collection_select :location_id, Location.all, :id, :name,{},
            {class: "form-control"}%>
        </div>
        <div class="form-group">
          <%= f.label :return_date %><br>
          <div class="input-group">
            <input type="date" class="form-control" min="<%= DateTime.now.strftime('%Y-%m-%d') %>"
                    placeholder="dd/mm/yyyy" id="travel_plan_return_date" name="travel_plan[return_date]"/>
          </div>
        </div>
        <%= f.submit "Continue" , class:"btn btn-success"%>
<%end%>
