<div class="container">
  <div class="col-md-8">
    <div class="row">
      <h2>
        <span class="glyphicon glyphicon-envelope"></span>
        Inbox
      </h2>
    </div>
    <div class="row">
      <h3 class="inline">
        <span class="glyphicon glyphicon-th-list"></span>
        Activities
      </h3>
      <div class="pull-right">
        <form class="form-inline">
          <div class="form-group">
            <label for="filter-by">Filter by:</label>
            <select id="filter-by" name="filter-by" class="form-control">
              <option value="">All</option>
              <%= Request.statuses.each do |k, v| %>
                  <option value="<%= k %>" <%= 'selected' if k == params['filter-by']%>>
                    <%= status_name(k) %>
                  </option>
              <% end %>
            </select>
          </div>
        </form>
      </div>
    </div>
    <br/>
    <% if @messages.empty? %>
        <h4>You have no recent activities.</h4>
    <% else %>
        <div class="row">
          <table class="table table-hover">
            <% @messages.each do |m| %>
                <tr>
                  <td><%= determine_sender(m) %></td>
                  <td><%= m.content.html_safe %></td>
                  <td><%= m.created_at %></td>
                </tr>
            <% end %>
          </table>
        </div>
    <% end %>
  </div>
</div>