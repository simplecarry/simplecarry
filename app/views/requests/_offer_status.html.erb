<%= render 'traveller_info' %>

<% if current_user %>
    <% if @request.can_make_deposit?(current_user) %>
        <%= render 'deposit_form' %>
    <% elsif @request.can_make_purchase?(current_user) %>
        <form><button type="submit"></button></form>
    <% end %>
<% else %>
    <a href="<%= new_user_session_path %>" class="btn btn-success">Sign in to Deposit</a>
<% end %>