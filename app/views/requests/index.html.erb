<h1 class="text-center">Your request</h1>
<%= form_tag requests_path, method: :get do %>
  <%= label_tag :search, "Search for:" %>
  <% if params[:location] %>
    <%= hidden_field_tag :location, params[:location] %>
  <% end %>
  <% if params[:order] %>
    <%= hidden_field_tag :order, params[:order] %>
  <% end %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<%= render "shared/filter" %>
<%= render @requests %>
