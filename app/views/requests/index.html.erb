<h1 class="text-center">Requests from <%= params[:location]%></h1>
<div class="row">
  <div class="col-xs-12 col-sm-6">
    <%= render "shared/filter" %>
  </div>
  <div class="col-xs-12 col-sm-6">
      <%= form_tag requests_path, method: :get do %>
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </div>
          <% if params[:location] %>
            <%= hidden_field_tag :location, params[:location] %>
          <% end %>
          <% if params[:order] %>
            <%= hidden_field_tag :order, params[:order] %>
          <% end %>
          <%= text_field_tag :search,'', class:"form-control", 
            placeholder: "Looking for something?" %>
          <span class="input-group-btn">
            <%= submit_tag "Search", class:"btn btn-default" %>
          </span>
        </div>
      <% end %>
  </div>
</div>
<% @requests.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.each do |request| %>
          <% if request %>
            <%= render request %>
          <% end %>
      <% end %>
    </div>
<% end %>



