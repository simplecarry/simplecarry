<h1 class="text-center">Your request</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  
  <tbody>
      <% @requests.each do |request| %>
      <tr>
      <td><%= request.name %></td>
      <td><%= request.description %></td>
      <td><%= request.status %></td>
      </tr>
      <% end %>
  </tbody>
</table>
