<div class="container">
  <div class="row">
    <h3>
      <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>
      Request #<%= @request.id %>
    </h3>
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-1 user-info">
          <div class="media">
            <div class="media-left media-middle">
              <img class="media-object img-circle avatar" src="<%= @request.requester.avatar %>" alt="Requester Avatar">
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= @request.requester.email %></h4>
              <div class="user-rating">
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr/>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-1">
          <img class="product-image" src="<%= @request.picture_url %>" class="img-rounded"/>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h3><%= @request.name %></h3>
      <p><%= @request.description %></p>
      <br/>
      <p>
        <span class="glyphicon glyphicon-map-marker"></span>
        Shop in <%= @request.selling_location.name %>
      </p>
      <br/>
      <p>
        <span class="glyphicon glyphicon-map-marker"></span>
        Deal in <%= @request.delivery_location.name %>
      </p>
      <br/>
      <p>
        <span class="glyphicon glyphicon-map-marker"></span>
        Deal in <%= @request.delivery_location.name %>
      </p>
      <br/>
      <h5><%= @request.delivery_method.name %></h5>
      <p><%= @request.delivery_method.description %></p>
      <% if @request.links %>
          <p>
            <span class="glyphicon glyphicon-map-link"></span>
            <a href="<%= @request.links %>"><%= @request.links %></a>
          </p>
      <% end %>
      <br/>
      <p>
        <span class="glyphicon glyphicon-tag"></span>
        VND <%= @request.offer_price %>
      </p>

      <% if @request.can_have_new_offer? %>
          <% if current_user %>
              <button id="js-offer-help-btn" class="btn btn-primary"
                      data-toggle="modal" data-target="#offer-modal">
                Offer to Help
              </button>
              <div class="modal fade" id="offer-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-sm" role="document">
                  <form method="post" action="<%= request_offers_path(@request) %>">
                    <%= token_tag %>
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Offer to Help</h4>
                      </div>
                      <div class="modal-body">
                        <div class="form-group">
                          <label for="offer[price]">Offer Price</label>
                          <div class="input-group">
                            <span class="input-group-addon">VND</span>
                            <input type="number" class="form-control" value="<%= @request.offer_price %>" id="offer[price]" name="offer[price]"/>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="offer[arrival_date]">Return Date to <%= @request.delivery_location.name %></label>
                          <div class="input-group">
                            <input type="date" class="form-control" min="<%= DateTime.now.strftime('%Y-%m-%d') %>"
                                   placeholder="dd/mm/yyyy" id="offer[arrival_date]" name="offer[arrival_date]"/>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Confirm</button>
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
          <% else %>
            <a href="<%= new_user_session_path %>" class="btn btn-success">Sign in to Help</a>
          <% end %>
      <% end %>
    </div>
  </div>
</div>