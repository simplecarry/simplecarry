 <div class="col-xs-4">
<div class="turn_off_hover">
  <%= link_to request_path(request) do %>    
    <div class="panel panel-default">
      <div class="panel-thumbnail">
       <%= image_tag request.picture_url, class: "img-responsive" %>
      </div>
      <div class="panel-body">
        <p class="lead text-center"><%= request.name %></p>
        
        <h4 class="text-center">
          <span class="label <%= status_color_for(request.status_to_s) %>">
          <%= request.status_to_s %></span>
        </h4>
        <div class="panel-footer">
          <table>
            <tbody>
              <td style="padding-right:10px">
                <%= image_tag request.requester.avatar, class: "avatar img-circle"%>
              </td>
              <td style="padding-top:5px">
                <p>
                  Buy in <%= request.selling_location.name %>
                  <br>
                  Willing to pay <%= request.offer_price %> VND
                </p>
              </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

  
</div><!--/col-->
