<hr/>
<p>
  <span class="glyphicon glyphicon-plane"></span>
  Traveller offered to help
</p>
<br/>
<div class="user-info">
  <div class="media">
    <div class="media-left media-middle">
      <img class="media-object img-circle avatar" src="<%= @request.selected_offer.carrier.avatar %>" alt="Requester Avatar">
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= @request.selected_offer.carrier.email %></h4>
      <div class="user-rating">
        <% (1..5).each do |number| %>
            <span class="glyphicon <%= rating_class_name(@request.selected_offer.carrier.current_score, number) %>" aria-hidden="true"></span>
        <% end %>
      </div>
    </div>
  </div>
</div>